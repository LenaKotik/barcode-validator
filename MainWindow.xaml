        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:barcode"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Label Content="Barcode goes here" HorizontalAlignment="Center" Margin="0, 20"/>
        <TextBox Name="Input" Background="Bisque" Width="150"/>
        <Button Name="Butt" Margin="0, 10" Content="Check" Width="100" BorderBrush="Gray" BorderThickness="2"/>
        <Label Name="L" Content="..." Margin="0, 20" HorizontalAlignment="Center"/>
    </StackPanel>
</Window>
